#include <stdio.h>

#include <stdbool.h>


int main ()
{

int array[]={1,2,3,4,5,6,7,8};

int somma=0;


for(int i=0; i<8; i++){

 if(array[i]%2==0){
     
     
     array[i]+=1;
     
      printf("Questo e' pari ho aggiunto 1 quindi sara' : %d", array[i]);


     
      printf("\n");
 }
 
 else {
     
     

     array[i]+=2;

         printf("Questo numero e' dispari quindi ho aggiunto 2 quindi sara' : %d", array[i] );

        printf("\n");
    
     
     
     
 }
 
 

 
 

 

 





}



return 0;
}
